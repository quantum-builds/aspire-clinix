generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     String
}

model Patient {
  id       String @id @default(cuid())
  email    String @unique
  password String
}

model Dentist {
  id       String @id @default(cuid())
  email    String @unique
  password String
}

model ReferralForm {
  id                  String   @id @default(cuid())
  medicalHistory      String
  requiredTreatment   String
  attendAppointment   Boolean
  createdAt           DateTime @default(now())
  referralDetails     String[]
  dentistEmail        String
  dentistGCDNumber    String
  dentistMobileNumber String
  dentistName         String
  pateintMobileNumber String
  patientAddress      String
  patientDateOfBirth  DateTime
  patientEmail        String
  patientName         String
  referrerDentistId   String

  @@unique([patientEmail, dentistEmail])
}

model Appointment {
  id                String   @id @default(cuid())
  dentistId         String
  appointmentDate   DateTime
  appointmentStatus String
  patientId         String
}

model Treatment {
  id          String  @id @default(cuid())
  name        String  @unique
  description String
  cost        Decimal @db.Decimal(10, 2)
}

model PatientTreatment {
  id              String   @id @default(cuid())
  dentistId       String
  patientId       String
  treatmentId     String
  treatmentDate   DateTime
  treatmentStatus String
}
